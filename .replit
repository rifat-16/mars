modules = ["web", "swift-5.8", "dart-3.8", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["flutter", "git", "cacert", "which", "unzip"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 46219
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web Server"

[[workflows.workflow]]
name = "Flutter Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter run -d web-server --web-hostname 0.0.0.0 --web-port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "npm i -g serve@14 && serve -s build/web -l ${PORT:-5000}"]
build = ["flutter", "build", "web", "--release"]
